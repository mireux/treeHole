/* pages/grouping/index.wxss */
.group-button {
  /* background-color: aquamarine; */
  margin-top: 20rpx;
  height: 150rpx;
}

.group-button-style {
  display: inline-block;
  background-color: bisque;
  width: 250rpx;
  text-align: center;
  line-height: 80rpx;
  height: 80rpx;
  margin-top: 35rpx;
  border-radius: 100rpx;
}

.my-group {
  margin-left: 70rpx;
  box-shadow: 5px 5px 5px #888888;
}

.start-group {
  margin-left: 100rpx;
  box-shadow: 5px 5px 5px #888888;
}

.group-tags {
  display: inline-block;
  /* background-color: brown; */
  width: 100%;
  height: 150rpx;
}

.tags {
  background-color: rgb(240, 252, 136);
  display: inline-block;
  width: 150rpx;
  margin-left: 30rpx;
  text-align: center;
  height: 55rpx;
  line-height: 55rpx;
  border-radius: 100rpx;
  margin-top: 20rpx;
  box-shadow: 5px 5px 5px #888888;
}

.group-card {
  display: block;
  width: 600rpx;
  height: 250rpx;
  margin-left: 60rpx;
  background-color: rgba(255, 179, 221, 0.3);
  padding-left: 20rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
}

.group-card-top {
  display: block;
}

.group-card-top .group-title {
  padding-top: 20rpx;

  /* background-color: darkblue; */
}

.group-tag {
  margin-top: 20rpx;
}


.group-card-bottom {
  display: block;
  margin-top: 20rpx;
}

.group-time {
  margin-top: 20rpx;
}